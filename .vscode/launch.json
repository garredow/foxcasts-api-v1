    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm start -- --port 3000",
            "name": "Run API",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run E2E",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/tap",
            "runtimeArgs": [
                "--ts",
                "--no-coverage",
                "--reporter=list",
                "--no-timeout"
            ]
        }
    ]
}