{
  "name": "foxcasts-api-v1",
  "version": "1.12.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "tsc && node dist/index.js",
    "build": "tsc",
    "test": "jest tests",
    "test:coverage": "jest tests --coverage",
    "test:ci": "jest tests --coverage --ci --runInBand --reporters=default --reporters=jest-junit",
    "e2e": "tap --ts --no-coverage --reporter=list e2e",
    "e2e:coverage": "tap --ts --reporter=list e2e",
    "e2e:report": "tap --ts --coverage-report=html --no-browser --nyc-arg=--report-dir=e2e-coverage e2e",
    "commit": "cz"
  },
  "author": "Garrett Downs",
  "license": "ISC",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/garredow/foxcasts-api-v1.git"
  },
  "dependencies": {
    "@fastify/cors": "^8.0.0",
    "@fastify/jwt": "^6.3.1",
    "@fastify/swagger": "^7.4.1",
    "arg": "^5.0.1",
    "dotenv": "^8.6.0",
    "fastify": "^4.3.0",
    "fastify-plugin": "^4.0.0",
    "joi": "^17.4.2",
    "joi-to-json": "^2.4.0",
    "jsmediatags": "^3.9.7",
    "newrelic": "^8.16.0",
    "node-fetch": "^2.6.1",
    "node-vibrant": "^3.2.1-alpha.1",
    "podcastdx-client": "^5.0.0",
    "sharp": "^0.28.3",
    "xmldom": "^0.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-typescript": "^7.15.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^9.0.1",
    "@types/jest": "^27.0.1",
    "@types/jsmediatags": "^3.9.3",
    "@types/node": "^16.6.1",
    "@types/node-fetch": "^2.5.12",
    "@types/sharp": "^0.28.5",
    "@types/tap": "^15.0.5",
    "@types/xmldom": "^0.1.31",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "babel-jest": "^27.1.1",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "jest": "^28.1.3",
    "jest-junit": "^12.2.0",
    "jsonwebtoken": "^8.5.1",
    "pino-pretty": "^6.0.0",
    "semantic-release": "^19.0.3",
    "tap": "^15.0.9",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "echo ${lastRelease.version} > old_version && echo ${nextRelease.version} > new_version"
        }
      ],
      [
        "@semantic-release/github",
        {
          "successComment": false,
          "failComment": false
        }
      ],
      "@semantic-release/git"
    ]
  }
}
